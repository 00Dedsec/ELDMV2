[train]
epoch = 256
batch_size = 16
shuffle = True
reader_num = 12

optimizer = adam
weight_decay = 0
learning_rate = 5e-5
step_size = 1
lr_multiplier = 1

[eval]
batch_size = 16
shuffle = False
reader_num = 12

[data]
train_dataset_type = JsonFromFiles
train_formatter_type = BertSCM
# train_dataset_type = Json_sent_from_files
# train_formatter_type = SentSCM
train_data_path = ./data/
train_file_list = train.jsonl

valid_dataset_type = JsonFromFiles
valid_formatter_type = BertSCM
# valid_dataset_type = Json_sent_from_files
# valid_formatter_type = SentSCM
valid_data_path = ./data/
valid_file_list = valid.jsonl

test_dataset_type = JsonFromFiles
test_formatter_type = BertSCM
test_data_path = ./data/
test_file_list = test.jsonl

max_seq_length = 512

[model]
model_name = teacher_moodel
# bert_path = bert-base-chinese
bert_path = ../student/plm/bert-ms/ms
hidden_size = 768

[output]
tensorboard_path = ./output/tensorboard

output_function = Basic

model_path = ./output/done_models/
model_name = teacher_model_bert_ms
# model_name = teacher_model

output_time = 1
test_time = 1

[distributed]
use = False
backend = nccl

